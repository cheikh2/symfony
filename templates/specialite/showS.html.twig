{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-4">
<h5>LES SPECIALITES</h5>
{% for message in app.flashes('success') %}
<div class="alert alert-success">
{{ message }}
</div>
{% endfor %}
<div class="text-right">
    <a href="{{ path('specialite.specialite.addS') }}" class="btn btn-primary">AJOUTER UN SPECIALITE</a>
</div>
<table class="table table-stripped">
    <thead>
        <tr>
            <th>NOM</th>
             <th>ACTIONS</th>
        </tr>
    </thead>
    <tbody>
     {% for specialite in specialites %}
        <tr>
            <td>{{ specialite.name }}</td>
        <td>
            <a href="{{ path('specialite.specialite.editS', {id: specialite.id}) }}" class="btn btn-primary">Editer</a>
            <form method="post" action="{{ path('specialite.specialite.delete', {id: specialite.id}) }}" style="display:
            inline-block" onsubmit="return confirm('Voulez-vous vraiment supprimer')">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ specialite.id) }}">
            <button class="btn btn-danger">Supprimer</button>
            </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}

